@using QL_BanHang.Helpers
@model IEnumerable<SanPham>
@{
}

<div class="container mt-5">
    <div class="row">
        @if (Model.Count() > 0)
        {
            foreach (var item in Model)
            {
                <div class="col-4">
                    <div class="card w-100">
                        <div class="single-image">
                            <img src="~/@item.HinhSp" class="card-img-top" alt="...">
                            <a asp-controller="SanPham" asp-action="Detail" asp-route-id="@item.MaSp" class="btn-order">Xem Ngay</a>
                        </div>
                        <div class="product-info">
                            <div class="product-name" asp-controller="SanPham" asp-action="Detail" asp-route-id="@item.MaSp"><h5>@item.TenSp</h5></div>
                            <div class="product-price text-center">@Html.FormatPrice(@item.DonGia) VNĐ</div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="empty-data">
                <img src="~/imagesapp/not-available.png" />
                <span><i>Không có sản phẩm nào</i></span>
            </div>
        }
    </div>
</div>