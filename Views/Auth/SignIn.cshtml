@model KhachHang


<div class="wrapper">
    <div class="container">
        <div class="row justify-content-around ">
            <form asp-controller="Auth" asp-action="SignIn" method="POST" class="col-md-6 p-3 mt-3" style="background-color: lightcoral">
                <h1 class="text-center text-uppercase h3 py-3"> Đăng ký tài khoản</h1>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="TenKh" class="control-label">Tên khách hàng</label>
                        <input type="text" asp-for="TenKh" class="form-control" required>
                        <span asp-validation-for="TenKh" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="HoKh" class="control-label">Họ khách hàng</label>
                        <input type="text" asp-for="HoKh" class="form-control" required>
                        <span asp-validation-for="HoKh" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="DienThoai" class="control-label">Điện thoại</label>
                    <input type="text" asp-for="DienThoai" class="form-control" required>
                    <span asp-validation-for="DienThoai" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label">Email</label>
                    <input type="email" asp-for="Email" class="form-control">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GioiTinh" class="control-label"> Giới tính</label>
                    <!-- Nhập -->
                    <div>
                        <!--  Nằm cùng dòng -->
                        <div class="form-check form-check-inline">
                            <input type="radio" asp-for="GioiTinh" id="male"
                                   value="Nam" class="form-check-input">
                            <label asp-for="GioiTinh" class="form-check-label">Nam</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input type="radio" asp-for="GioiTinh" id="female"
                                   value="Nữ" class="form-check-input">
                            <label asp-for="GioiTinh" class="form-check-label">Nữ</label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="DiaChi" class="control-label">Địa chỉ</label>
                    <input type="text" asp-for="DiaChi" class="form-control" required>
                    <span asp-validation-for="DiaChi" class="text-danger"></span>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="TenDangNhap" class="control-label">Tên đăng nhập</label>
                        <input type="text" asp-for="TenDangNhap" class="form-control" required>
                        <span asp-validation-for="TenDangNhap" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="MatKhau" class="control-label">Mật khẩu</label>
                        <input type="password" asp-for="MatKhau" class="form-control" required>
                        <span asp-validation-for="MatKhau" class="text-danger"></span>
                    </div>
                </div>
                <div class="my-3">
                    <button type="submit" class="btn btn-secondary btn-block py-3">Đăng ký</button>
                </div>
            </form>
        </div>
    </div>
</div>




